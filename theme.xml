<?xml version="1.0"?>
<Theme>
	<ImageSizes>
		<Mini width="260" height="260" />
		<List width="520" height="520" />
		<Normal width="520" height="520" />
		<Big width="1200" height="1200" />
		<Banner-Wide width="1920" />
	</ImageSizes>
	<Features>
		<Checkout>
			<SinglePage supported="true" default="default" />
			<MultiPage supported="false" />
		</Checkout>
		<GiftCards supported="true" />
		<ProductBundles supported="true" />
		<ProductListFilters supported="true" />
		<BrandProductListFilters supported="true" />
		<CampaignProductListFilters supported="true" />
	</Features>
	<Settings>
		<Doctype standard="HTML5" />
	</Settings>
	<ThemeSettings>
		<SettingGroup label="colors" description="colors_description">
			<Setting type="select" name="color_theme" label="color_theme" default="theme-black">
				<Option value="theme-black" label="Black" />
				<Option value="theme" label="Blue" />
				<Option value="theme-brown" label="Brown" />
				<Option value="theme-green" label="Green" />
				<Option value="theme-light-blue" label="Light Blue" />
				<Option value="theme-red" label="Red" />
				<Option value="theme-yellow" label="Yellow" />
				<Option value="theme-white" label="White" />
			</Setting>
		</SettingGroup>
	</ThemeSettings>
</Theme>
